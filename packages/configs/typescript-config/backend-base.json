{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "isolatedModules": true,
        "lib": [
            "ES2021",
            "DOM"
        ],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noEmitHelpers": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "stripInternal": true,
        "target": "ES2017"
    }
}